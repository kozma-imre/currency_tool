# Example .env for local development
# Put your Service Account JSON as a single-line JSON string in GOOGLE_SERVICE_ACCOUNT
# e.g. GOOGLE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"my-project",...}'
GOOGLE_SERVICE_ACCOUNT='{}'
# Optional configuration
# FETCH_CRON='0 2 * * *'

# Optional provider API keys (leave empty if not used)
# Get a CoinGecko API key (optional) and place it here
COINGECKO_API_KEY=
# If using Binance authenticated endpoints, set these (optional)
BINANCE_KEY=
BINANCE_SECRET=

# Which crypto ids to fetch (CoinGecko ids, comma-separated). Defaults to bitcoin,ethereum
CRYPTO_IDS=bitcoin,ethereum
# Optional explicit symbols for Binance (comma-separated). Defaults derived from CRYPTO_IDS
CRYPTO_SYMBOLS=BTC,ETH
# Which fiat currencies to fetch (comma-separated): usd,eur,...
FIAT_CURRENCIES=usd,eur

# Integration / runtime toggles
# Set to true to enable integration tests that use the configured Firestore
RUN_INTEGRATION_TESTS=false

# Collection names (override to use a test collection)
EXCHANGE_RATES_COLLECTION=exchange_rates
# Use this for integration tests to avoid touching production data
EXCHANGE_RATES_COLLECTION_TEST=exchange_rates_test
MONITORING_COLLECTION=monitoring

# Optional config for automated PR creation (used by sync workflows)
# PR_BASE_BRANCH sets the target branch for opened PRs (default: main)
PR_BASE_BRANCH=main
# For local testing of the --create-pr flow you can provide a personal access token and repo
# GITHUB_TOKEN=ghp_your_personal_access_token
# GITHUB_REPOSITORY=owner/repo

# Repository variable used by the sync workflow to update the cleanup schedule
# Set this repository variable (Settings → Secrets and variables → Variables) to the cron expression
# Example (weekly, Sunday at 06:00 UTC): CLEANUP_CRON='0 6 * * 0'
CLEANUP_CRON='0 6 * * 0'

# Optional alerting (Telegram)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ALERTING_ENABLED=false

# Staleness detection
STALE_AFTER_HOURS=48

# Alerting/aggregation settings
ALERT_THRESHOLD_RUNS=1
ALERT_DEBOUNCE_MINUTES=60
MONITORING_ALERTS_COLLECTION=monitoring_alerts
REMEDIATION_ENABLED=false

CRYPTO_USE_TOP_N=100